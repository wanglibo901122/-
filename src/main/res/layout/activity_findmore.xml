<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bawei.myvideo.sousuo.FindmoreActivity"
    android:background="@mipmap/bg_colorful">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit"
            android:background="#2affffff"
            android:layout_weight="4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fancy"
            android:layout_marginLeft="5dp"
            android:layout_weight="6"
            android:id="@+id/find"/>

    </LinearLayout>
   <com.bawei.myvideo.sousuo.FlowLayout
       android:id="@+id/flow_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"></com.bawei.myvideo.sousuo.FlowLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    ></View>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#fa0808"
    android:text="清除搜索记录"
    android:id="@+id/delall"
    android:layout_marginBottom="10dp"
    />
</LinearLayout>
